<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CheckOutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="5dp"
        android:paddingTop="10dp"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company: "
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/serviceDetailCompanyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yellow Gloves"
            android:textColor="@color/text_blue"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20sp"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="10dp"
            >
        <TextView
            android:id="@+id/serviceDetailCompanySubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service selected: "
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_gravity="center"
            />

            <TextView
                android:id="@+id/ServicseSelectedAtCheckOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Se"
                android:textColor="@color/primary_orange"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_gravity="center"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select the date for Service"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            />

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPayAfterService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pay after Service is completed"
            android:textAllCaps="false"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/primary_orange"
            android:textColor="@color/black"
            android:padding="10dp"

            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>